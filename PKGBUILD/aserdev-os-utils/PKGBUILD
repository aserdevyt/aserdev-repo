# Maintainer: aserdev <you@example.com>

pkgname=aserdev-os-utils
pkgver=20251030.2349
pkgrel=1
pkgdesc="aserdev OS core utilities (rofi-cliphist, screenrec, aser-settings)"
arch=('any')
url="https://github.com/aserdevyt/aserdev-os-utils"
license=('custom')
depends=()
makedepends=('git')
source=("git+$url")
md5sums=('SKIP')

pkgver() {
  date +%Y%m%d.%H%M
}

package() {
  cd "$srcdir/$pkgname"

  # only take these files
  for f in rofi-cliphist screenrec aser-settings; do
    if [[ -f "$f" ]]; then
      install -Dm755 "$f" "$pkgdir/usr/bin/$f"
    else
      echo "⚠️  Warning: $f not found in repo!" >&2
    fi
  done
}

