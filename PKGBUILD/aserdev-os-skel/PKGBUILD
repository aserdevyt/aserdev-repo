# Maintainer: aserdev <you@example.com>

pkgname=aserdev-os-skel
pkgver=20251031.1725            # placeholder, made irrelevant by pkgver() below
pkgrel=1
pkgdesc="Default /etc/skel setup for aserdev OS"
arch=('any')
url="https://github.com/aserdevyt/aserdev-dotfiles"
license=('custom')
depends=('unzip')
source=("https://github.com/aserdevyt/aserdev-dotfiles/raw/refs/heads/main/skel.zip")
md5sums=('SKIP')

pkgver() {
    date +%Y%m%d.%H%M
}

package() {
    mkdir -p "$pkgdir/etc/skel"
    unzip -o "$srcdir/skel.zip" -d "$pkgdir/etc/skel"
}
