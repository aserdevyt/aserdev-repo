# Maintainer: Your Name <you@example.com>
pkgname=aserdev-os-cursors
pkgver=1.0
pkgrel=1
pkgdesc="Collection of cursor themes: ArcDusk, ArcStarry, ArcAurora, Polarnight, Afterglow"
arch=('any')
url="https://github.com/yeyushengfan258"
license=('GPL-3.0')
depends=('libxcursor' 'aserdev-os-all')
source=(
  "ArcDusk::https://github.com/yeyushengfan258/ArcDusk-Cursors/archive/refs/heads/main.tar.gz"
  "ArcStarry::https://github.com/yeyushengfan258/ArcStarry-Cursors/archive/refs/heads/main.tar.gz"
  "ArcAurora::https://github.com/yeyushengfan258/ArcAurora-Cursors/archive/refs/heads/main.tar.gz"
  "Polarnight::https://github.com/yeyushengfan258/Polarnight-Cursors/archive/refs/heads/main.tar.gz"
  "Afterglow::https://github.com/yeyushengfan258/Afterglow-Cursors/archive/refs/heads/main.tar.gz"
)
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')

package() {
  # Create icons directory
  install -dm755 "$pkgdir/usr/share/icons"
  # Copy each cursor theme folder to /usr/share/icons
  cp -a "${srcdir}/ArcDusk-Cursors-main/dist/ArcDusk" "$pkgdir/usr/share/icons/"
  cp -a "${srcdir}/ArcStarry-Cursors-main/dist/ArcStarry" "$pkgdir/usr/share/icons/"
  cp -a "${srcdir}/ArcAurora-Cursors-main/dist/ArcAurora" "$pkgdir/usr/share/icons/"
  cp -a "${srcdir}/Polarnight-Cursors-main/dist/Polarnight" "$pkgdir/usr/share/icons/"
  cp -a "${srcdir}/Afterglow-Cursors-main/dist/Afterglow" "$pkgdir/usr/share/icons/"
}
