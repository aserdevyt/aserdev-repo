# Maintainer: aserdevyt <aserdevyt@outlook.com>
pkgname=ash-shell
pkgver=$(date +%s)
pkgrel=1
pkgdesc="A modern, secure, feature-rich Linux shell written in C"
arch=('x86_64')
url="https://github.com/aserdevyt/ash-shell"
license=('GPL3')
depends=('readline')
optdepends=('kitty: proper Unicode/font rendering inside the shell')
conflicts=('ash-shell-debug')
provides=('ash-shell')
replaces=('ash-shell-debug')

source=("https://raw.githubusercontent.com/aserdevyt/ash-shell/main/ash")
md5sums=('SKIP')

options=(!debug)

build() {
  echo "✅ Using prebuilt binary — no build step required."
}

package() {
  install -Dm755 "$srcdir/ash" "$pkgdir/usr/bin/ash"
}
