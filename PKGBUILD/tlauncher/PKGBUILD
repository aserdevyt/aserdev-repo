pkgname=tlauncher
pkgver=$(date +%s)
pkgrel=1
pkgdesc="TLauncher packaged by aserdev"
arch=('any')
url="https://github.com/aserdevyt/tlauncher-aserdev-os"
license=('custom')
depends=('java-runtime')
source=("git+https://github.com/aserdevyt/tlauncher-aserdev-os.git")
sha256sums=('SKIP')

package() {
    mkdir -p "$pkgdir/usr/share/tlauncher"
    cp "$srcdir/tlauncher-aserdev-os/TLauncher.jar" "$pkgdir/usr/share/tlauncher/TLauncher.jar"
    cp "$srcdir/tlauncher-aserdev-os/tlauncher.png" "$pkgdir/usr/share/tlauncher/tlauncher.png"

    chmod 777 "$pkgdir/usr/share/tlauncher"

    mkdir -p "$pkgdir/usr/bin"
    install -Dm755 "$srcdir/tlauncher-aserdev-os/tlauncher" "$pkgdir/usr/bin/tlauncher"

    mkdir -p "$pkgdir/usr/share/applications"
    install -Dm644 "$srcdir/tlauncher-aserdev-os/tlauncher.desktop" "$pkgdir/usr/share/applications/tlauncher.desktop"
}

