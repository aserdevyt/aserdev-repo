# Maintainer: Your Name <you@example.com>
pkgname=aserdev-os-themes
pkgver=1.0
pkgrel=1
pkgdesc="Collection of GTK themes: Layan, Nordic, WhiteSur, Sweet, Orchis, Vimix"
arch=('any')
url="https://github.com/"
license=('GPL-3.0' 'MIT')
depends=('gtk3' 'dracula-gtk-theme' 'aserdev-os-all')
source=(
  "Layan::https://github.com/vinceliuice/Layan-gtk-theme/archive/refs/tags/2023-05-23.tar.gz"
  "Nordic::https://github.com/EliverLara/Nordic/archive/refs/tags/v2.2.0.tar.gz"
  "WhiteSur::https://github.com/vinceliuice/WhiteSur-gtk-theme/archive/refs/heads/main.tar.gz"
  "Sweet::https://github.com/EliverLara/Sweet/archive/refs/tags/v6.0.tar.gz"
  "Orchis::https://github.com/vinceliuice/Orchis-theme/archive/refs/heads/main.tar.gz"
  "Vimix::https://github.com/vinceliuice/Vimix-gtk-themes/archive/refs/heads/master.tar.gz"
)
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP' 'SKIP')

package() {
  # Create themes directory
  install -dm755 "$pkgdir/usr/share/themes"
  # Copy each GTK theme directory into /usr/share/themes
  cp -a "${srcdir}/Layan-gtk-theme-2023-05-23/Layan" "$pkgdir/usr/share/themes/"
  cp -a "${srcdir}/Nordic-2.2.0/Nordic" "$pkgdir/usr/share/themes/"
  cp -a "${srcdir}/WhiteSur-gtk-theme-main/WhiteSur" "$pkgdir/usr/share/themes/"
  cp -a "${srcdir}/Sweet-6.0/Sweet" "$pkgdir/usr/share/themes/"
  cp -a "${srcdir}/Orchis-theme-main/Orchis" "$pkgdir/usr/share/themes/"
  cp -a "${srcdir}/Vimix-gtk-themes-master/Vimix" "$pkgdir/usr/share/themes/"
}
